{% extends 'back_base.html.twig' %}


{% block title %}formulaire!{% endblock %}

{% block body %}

    <h1>Liste des formulaire</h1>

    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-bordered"  width="100%" cellspacing="0">

                <thead>
                <br>

                <th>ref</th>
                <th>cin</th>
                <th>question1</th>
                <th>question2</th>
                <th>question3</th>
                <th>question4</th>
                <th>question5</th>
                <th>question6</th>
                <th>type</th>

                </thead>
                <tbody {% for form in forms %} >

                <tr>
                    <td>{{ form.ref }}</td>
                    <td>{{ form.cin }}</td>
                    <td>{{ form.quest1 }}</td>
                    <td>{{ form.quest2}}</td>
                    <td>{{ form.quest3 }}</td>
                    <td>{{ form.quest4}}</td>
                    <td>{{ form.quest5}}</td>
                    <td>{{ form.quest6}}</td>
                    <td>{{ form.type }}</td>
                    <td><a href="{{ path('supprimerF',{'ref':form.ref}) }}"class="btn btn-danger btn-circle"><i class="fas fa-trash"></i></a></td>
                    <td><a href="{{ path('modifierF',{'ref':form.ref}) }}"class="btn btn-warning btn-circle"><i class="fas fa-exclamation-triangle"></i></a></td>
                </tr>


                </tbody {% endfor %}>
            </table>
            <button class="rounded-circle border-0" id="sidebarToggle">
                <a class="nav-link" href="{{ path('ajoutF') }}">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>ajouter un formulaire</span></a>
            </button>

        </div>
    </div>

{% endblock %}
