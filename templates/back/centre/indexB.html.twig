{% extends '/back/baseB.html.twig' %}

{% block title %}Centre index{% endblock %}

{% block body %}

    <div class="container">
    <h1>Centre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Description</th>
                <th>Horaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for centre in centres %}
            <tr>
                <td>{{ centre.id }}</td>
                <td>{{ centre.nom }}</td>
                <td>{{ centre.telephone }}</td>
                <td>{{ centre.email }}</td>
                <td> {{ centre.description|length > 50 ? centre.description|slice(0, 25) ~ '...' : centre.description  }}</td>
                <td>{{ centre.horaire ? centre.horaire|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('centre_showB', {'id': centre.id}) }}">
                        Afficher</a>
                    <a href="{{ path('centre_editB', {'id': centre.id}) }}"><img src="{{ asset('images/edit.png') }} " width="30" height="30"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('centre_newB') }}">Create new</a>
    </div>
{% endblock %}

