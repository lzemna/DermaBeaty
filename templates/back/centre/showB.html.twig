{% block body %}
    <div class="container">
        <h1>Centre</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ centre.id }}</td>
            </tr>

            <tr>
                <th>Nom</th>
                <td>{{ centre.nom }}</td>
            </tr>
            <tr>
