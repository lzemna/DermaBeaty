{% extends 'base.html.twig' %}

{% block title %}forum {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/jquery-ui-1.12.1.custom/jquery-ui.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/categories_styles.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/categories_responsive.css') }}">
    <style>
        .btn_ajouter_form{
            background: #fe4c50;
            border: #fe4c50;

            text-decoration: none!important;
            padding: 9px 16px;
            border: none;
            display: inline-flex;
            align-items: center;
            box-shadow: 0 1px 2px rgb(36 57 141 / 40%);
            border-radius: 4px;
            line-height: 1.6;
            font-family: Inter,sans-serif;
            font-weight: 700;
            color: #fff;
            cursor: pointer;
            transition: filter .3s,background .3s,color .3s;
            font-size: .9em;
            filter: brightness(1);
            white-space: nowrap;
        }
        .page{
            font-weight:bold;
            font-size:20px;
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            border-radius:5px;
            border:1px solid black;

        }
        .current
        {
            font-weight:bold;
            font-size:20px;
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            border-radius:5px;
            border:1px solid black;
            background-color:#fe4c50;
        }
        .page:hover{
            background-color: #fe4c50;
        }
        .last{
            font-weight:bold;
            font-size:20px;
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            border-radius:5px;
            border:1px solid black;

        }
        .next{
            font-weight:bold;
            font-size:20px;
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            border-radius:5px;
            border:1px solid black;

        }


        ul .pagination
        {
            display: inline-block;


        }

        .button_sujet {
            background-color: #ddd;
            border: none;
            color: black;

            text-align: center;
            text-decoration: none;
            display: inline-block;
            margin: 2px;
            cursor: pointer;

            font-family: inherit;

            font-size: 10px;
            height: 18px;
            padding: 0 5px;
            font-weight: 400;
            line-height: 18px;
            border-radius: 3px;
        }

        .button_sujet:hover {
            background-color: #f1f1f1;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="container js-filter">




        {% if app.user %}
        <a class="btn_ajouter_form" href="{{ path('add_forum') }}">nouveau forum     +</a>
        {% endif %}

        <div class="row">
            <div class="col-md-3">
                <div class="sidebar_title">
                    <h5>Product Category</h5>
                </div>
                <ul class="sidebar_categories">
                    {%  for s in sujet %}
                    <li><a href="{{path('afficher_forum_with_cath',{id:s.id})}}">{{ s.nom }}</a></li>
                   <!-- <li class="active"><a href="#"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Women</a></li>-->
                    {% endfor %}
                </ul>
                {% include 'forum/filter.html.twig' with {form: form} only %}

            </div>
            <div class="col-md-9 ">
                <div class="grid" id="js-content">
                    {% include 'forum/forums.html.twig' with {forum: forum} only %}
                </div>
                <div class="pages d-flex flex-row ">
                    {{ knp_pagination_render(forum) }}
                </div>
            </div>
        </div>



    </div>





{% endblock %}
{% block javascripts %}

    <script src="{{ asset('plugins/jquery-ui-1.12.1.custom/jquery-ui.js') }}"></script>
    <script src="{{ asset('js/categories_custom.js') }}"></script>
{% endblock %}