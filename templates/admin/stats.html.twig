{% block body %}
    <div class="container">
        <div class="col-xl-4 col-lg-5">
    <div class="card shadow mb-4">
<div class="card-header py-3">
        <h1>statistique dermatologue </h1>
    </div>
    <canvas id="Users" width="10" height="10"></canvas>
    </div>
        </div>
