{% extends 'back_base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
<div class="card-body">
    <div class="table-responsive">
    <table border="1" class="table table-bordered"  width="100%" cellspacing="0">
        <thead>
        <th>ReferenceP</th>
        <th>NomP</th>
        <th>Type</th>
        <th>Marque</th>
        <th>Prix</th>
        <th>Quantite</th>
        <th>Image</th>
        <th>Description</th>
        <th>Update</th>
        <th>Delete</th>
        {% for produit in produits %}
        <tbody>
        <td>
            {{ produit.ReferenceP }}
        </td>
        <td>
            {{ produit.NomP }}
        </td>
        <td>
            {{ produit.TypeP }}
        </td>
        <td>
            {{ produit.MarqueP }}
        </td>
        <td>
            {{ produit.PrixP }}
        </td>
        <td>
            {{ produit.QuantiteP }}
        </td>
        <td>
            <img src="{{ asset('/back/img/' ~ produit.ImageP)}}">
        </td>
        <td>
            {{ produit.DescriptionP }}
        </td>
        <td> <a href="{{path('modifier_P',{'Reference_P':produit.ReferenceP})  }}">Update</a>  </td>
        <td> <a href="{{path('supprimer_P',{'Reference_P':produit.ReferenceP})  }}">Delete</a>  </td>
        {% endfor %}
        </tbody>
    </table>
    <button class="rounded-circle border-0" id="sidebarToggle">
        <a class="nav-link" href="{{ path('ajouter_P') }}">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>ajouter un produit</span></a>
    </button>
    </div>
</div>
{% endblock %}
