{% extends 'back_base.html.twig' %}

{% block title %}Hello CategoriePController!{% endblock %}

{% block body %}
<div class="card-body">
    <div class="table-responsive">
    <table border="1" class="table table-bordered"  width="100%" cellspacing="0">
        <thead>
        <th>ReferenceC</th>
        <th>NomC</th>
        <th>Critere</th>
        <th>Update</th>
        <th>Delete</th>
        {% for categorie in categories %}
        <tbody>
        <td>
            {{ categorie.ReferenceC }}
        </td>
        <td>
            {{ categorie.NomC }}
        </td>
        <td>
            {{ categorie.Critere }}
        </td>
        <td> <a href="{{path('modifier_CP',{'Reference_C':categorie.ReferenceC})  }}">Update</a>  </td>
        <td> <a href="{{path('supprimer_CP',{'Reference_C':categorie.ReferenceC})  }}">Delete</a>  </td>
        {% endfor %}
        </tbody>
    </table>
    <button class="rounded-circle border-0" id="sidebarToggle">
        <a class="nav-link" href="{{ path('ajouter_CP') }}">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>ajouter une categories</span></a>
    </button>
    </div>
</div>
{% endblock %}
